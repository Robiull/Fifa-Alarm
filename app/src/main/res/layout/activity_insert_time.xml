<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <EditText
            android:id="@+id/userYearET"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:hint="Year"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="40dp"/>
        <EditText
            android:id="@+id/userMonthET"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:hint="month"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="40dp"/>

        <EditText
            android:id="@+id/userDayET"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:hint="date"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:id="@+id/userHourET"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:hint="Hour"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="40dp"/>
        <EditText
            android:id="@+id/userMinuteET"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:hint="Minute"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addNewTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Time"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/displayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display"
            android:textAllCaps="false"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/displayTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="#f90b0b"
        android:text="example"
        android:scrollbars = "vertical"
        android:textSize="30sp"/>



</LinearLayout>
